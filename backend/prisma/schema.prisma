generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poll {
  id        String   @id @default(uuid())
  question  String
  duration  Int
  startedAt DateTime
  status    PollStatus @default(ACTIVE)

  options   Option[]
  votes     Vote[]
}

model Option {
  id     String @id @default(uuid())
  text   String

  poll   Poll   @relation(fields: [pollId], references: [id])
  pollId String

  votes  Vote[]
}

model Vote {
  id        String @id @default(uuid())
  poll      Poll   @relation(fields: [pollId], references: [id])
  pollId    String
  studentId String
  option    Option @relation(fields: [optionId], references: [id])
  optionId  String

  @@unique([pollId, studentId])
}

enum PollStatus {
  ACTIVE
  ENDED
}
